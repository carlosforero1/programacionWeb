@model trabajoclases.Models.Post

@{
    ViewData["Title"] = "Edit";
}
<style>
    /* Contenedor principal de la vista Edit */
.edit-container {
    width: 400px;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    margin: 40px auto;
    font-family: Arial, sans-serif;
}

/* Título principal */
.edit-container h1 {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    text-align: center;
    margin-bottom: 20px;
}

/* Estilo para el encabezado de sección */
.edit-container h4 {
    font-size: 20px;
    color: #555;
    text-align: center;
    margin-bottom: 10px;
}

/* Estilo de los campos de entrada */
.edit-container .form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #555;
    text-align: left;
}

.edit-container input[type="text"],
.edit-container input[type="datetime-local"],
.edit-container select {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
    outline: none;
}

/* Botón de guardar cambios */
.edit-container .btn-save {
    padding: 10px 20px;
    background-color: #4CAF50; /* Verde para Save */
    color: #ffffff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

.edit-container .btn-save:hover {
    background-color: #45a049; /* Verde más oscuro al pasar el cursor */
}

/* Enlace Back to List */
.edit-container .back-to-list {
    color: #555;
    font-size: 16px;
    text-decoration: none;
    margin-top: 15px;
    display: inline-block;
}

.edit-container .back-to-list:hover {
    color: #2196F3; /* Azul al pasar el cursor */
}

</style>
<div class="edit-container">
    <h1>Edit</h1>
    <h4>Post</h4>
    <hr />

    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion" class="control-label"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fecha" class="control-label"></label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tema" class="control-label"></label>
            <input asp-for="Tema" class="form-control" />
            <span asp-validation-for="Tema" class="text-danger"></span>
        </div>

        <input type="submit" value="Save" class="btn-save" />
        <a asp-action="Index" class="back-to-list">Back to List</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
