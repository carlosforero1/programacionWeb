@model trabajoclases.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Estilo del contenedor de la vista Delete */
    .delete-container {
        width: 400px;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: left;
        margin: 40px auto;
        font-family: Arial, sans-serif;
    }

        /* Título principal */
        .delete-container h1 {
            font-size: 24px;
            font-weight: bold;
            color: #e53935;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Títulos secundarios */
        .delete-container h3, .delete-container h4 {
            font-size: 20px;
            color: #333;
            text-align: center;
        }

        /* Estilo para la lista de detalles */
        .delete-container .row dt {
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
            display: inline-block;
            width: 100px; /* Asegura que todos los dt tengan un ancho fijo para alinear los dd */
        }

        .delete-container .row dd {
            margin-left: 25px; /* Espacio para alinear con los dt */
            color: #333;
            margin-bottom: 10px;
            word-wrap: break-word;
        }

        /* Estilo del botón Delete */
        .delete-container .btn-danger {
            padding: 10px 20px;
            background-color: #f44336;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
            display: inline-block;
        }

            .delete-container .btn-danger:hover {
                background-color: #d32f2f;
            }

        /* Estilo del enlace Back to List */
        .delete-container .back-to-list {
            color: #555;
            font-size: 16px;
            text-decoration: none;
            margin-left: 15px; /* Espacio entre el botón y el enlace */
        }

            .delete-container .back-to-list:hover {
                color: #e53935;
            }

</style>

<div class="delete-container">
    <h1>Delete</h1>
    <h3>estas seguro de elimiar?</h3>

    <div>
        <h4>Post</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tema)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tema)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="back-to-list">Back to List</a>
        </form>
    </div>
</div>